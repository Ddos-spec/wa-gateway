{
  "version": 2,
  "functions": {
    "api/**/*.js": {
      "runtime": "nodejs18.x"
    }
  },
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/assets/(.*)", "dest": "/frontend/assets/$1" },
    { "src": "/(customer_login|dashboard|index)\\.html", "dest": "/frontend/$1.html" },
    { "src": "/", "dest": "/frontend/index.html" }
  ],
  "static": {
    "headers": {
      "/assets/(.*)": {
        "cache-control": "public, max-age=31536000, immutable"
      }
    }
  }
}
