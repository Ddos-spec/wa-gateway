# ============================================================
# WA Gateway - Environment Configuration
# ============================================================
# Copy this file to .env and update with your production values

# ==================== SECURITY (REQUIRED) ====================
# Admin Dashboard Password - CHANGE IN PRODUCTION!
ADMIN_DASHBOARD_PASSWORD=change_this_secure_password

# Session Secret - CHANGE IN PRODUCTION!
SESSION_SECRET=change_this_random_secret_key_in_production

# Token Encryption Key (must be 32 characters) - CHANGE IN PRODUCTION!
TOKEN_ENCRYPTION_KEY=change_this_to_32_character_key

# Master API Key for creating sessions via API (optional)
MASTER_API_KEY=your_master_api_key_here

# ==================== SERVER CONFIGURATION ====================
# Environment (development/production)
NODE_ENV=development

# Port number
PORT=3000

# Public URL of the application
PUBLIC_URL=http://localhost:3000

# Session timeout in DAYS
SESSION_TIMEOUT_DAYS=1

# Maintenance mode (set to 'true' to enable)
MAINTENANCE_MODE=false

# Maximum concurrent sessions
MAX_SESSIONS=10

# ==================== REDIS CONFIGURATION ====================
# Redis is the ONLY database used (PostgreSQL removed)

# Connection Details
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Full Connection String (optional - if not using individual settings)
# REDIS_URL=redis://default:password@localhost:6379/0

# Session storage prefix
REDIS_SESSION_PREFIX=wa-gateway:session:

# Session TTL in seconds (86400 = 24 hours)
REDIS_SESSION_TTL=86400

# ==================== WEBHOOK CONFIGURATION ====================
# Default webhook URL (can be overridden per session)
WEBHOOK_URL=

# Maximum retry attempts for failed webhooks
WEBHOOK_MAX_RETRIES=3

# Webhook concurrent requests
WEBHOOK_CONCURRENCY=5

# Webhook timeout in milliseconds
WEBHOOK_TIMEOUT=10000

# ==================== LOGGING ====================
# Log level: silent, fatal, error, warn, info, debug, trace
LOG_LEVEL=info

# ==================== HEALTH CHECK ====================
# Health check interval in milliseconds
HEALTH_CHECK_INTERVAL=30000

# Maximum health check failures before reconnect
HEALTH_CHECK_MAX_FAILURES=3

# ==================== RECONNECTION STRATEGY ====================
# Initial reconnection delay in milliseconds
RECONNECT_INITIAL_DELAY=5000

# Maximum reconnection delay in milliseconds
RECONNECT_MAX_DELAY=60000

# Maximum reconnection attempts
RECONNECT_MAX_ATTEMPTS=10

# ==================== NOTES ====================
# PostgreSQL support has been REMOVED in favor of Redis-only architecture
# This simplifies deployment and improves performance
# All session data is now stored in Redis only
