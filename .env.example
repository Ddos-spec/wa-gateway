# ===============================================
# WA-GATEWAY ENVIRONMENT CONFIGURATION
# ===============================================
# Copy this file to .env and configure your values

# -----------------------------------------------
# SERVER CONFIGURATION
# -----------------------------------------------
PORT=3000
PUBLIC_URL=http://localhost:3000
NODE_ENV=production

# -----------------------------------------------
# SESSION CONFIGURATION
# -----------------------------------------------
MAX_SESSIONS=10
SESSION_SECRET=your_super_secret_session_key_here
SESSION_TIMEOUT_DAYS=30
TOKEN_ENCRYPTION_KEY=your_encryption_key_32_chars_min

# -----------------------------------------------
# ADMIN AUTHENTICATION
# -----------------------------------------------
ADMIN_DASHBOARD_PASSWORD=your_secure_password_here

# -----------------------------------------------
# REDIS CONFIGURATION
# -----------------------------------------------
# Option 1: Use REDIS_URL (recommended for cloud deployments)
# REDIS_URL=redis://username:password@host:port/db

# Option 2: Use individual parameters (for local/custom setup)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_SESSION_PREFIX=wa-gateway:session:

# -----------------------------------------------
# WEBHOOK CONFIGURATION
# -----------------------------------------------
WEBHOOK_URL=
WEBHOOK_MAX_RETRIES=3
WEBHOOK_CONCURRENCY=5
WEBHOOK_TIMEOUT=10000

# -----------------------------------------------
# LOGGING
# -----------------------------------------------
LOG_LEVEL=info

# -----------------------------------------------
# NOTES
# -----------------------------------------------
# - SESSION_SECRET: Used for encrypting session cookies
# - TOKEN_ENCRYPTION_KEY: Used for encrypting API tokens (min 32 characters)
# - REDIS_URL: Takes precedence over individual REDIS_* params if set
# - WEBHOOK_URL: Default webhook URL (can be overridden per session)
# - WEBHOOK_TIMEOUT: Webhook request timeout in milliseconds
