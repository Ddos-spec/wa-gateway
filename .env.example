# WA Gateway Environment Variables - Example Configuration
# Copy this file to .env and update with your values

# Server Configuration
NODE_ENV=development
PORT=3000
PUBLIC_URL=http://localhost:3000

# Admin Dashboard
ADMIN_DASHBOARD_PASSWORD=change_this_password

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_SESSION_PREFIX=wa-gateway:session:

# Session Configuration
SESSION_SECRET=change_this_secret_key_to_something_random
SESSION_TIMEOUT_DAYS=1

# Webhook Configuration
WEBHOOK_MAX_RETRIES=3
WEBHOOK_CONCURRENCY=5
WEBHOOK_TIMEOUT=10000

# Logging
LOG_LEVEL=info

# Token Encryption (must be 32 characters)
TOKEN_ENCRYPTION_KEY=change_this_to_32_character_key

# Max Sessions
MAX_SESSIONS=10
