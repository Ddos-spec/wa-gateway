# ========================================
# PERSISTENT STORAGE PATHS
# ========================================
# CRITICAL: Jangan gunakan /tmp - data akan hilang saat restart!
# Gunakan path persistent yang di-mount ke volume EasyPanel
EXPRESS_SESSIONS_DIR=/app/sessions
AUTH_INFO_DIR=/app/auth_info

# ========================================
# RECONNECTION & TIMEOUT SETTINGS
# ========================================
# Timeout untuk QR code (dalam milidetik)
QR_TIMEOUT=90000
# Timeout koneksi WhatsApp (dalam milidetik)
CONNECTION_TIMEOUT=60000
# Maximum retry attempts untuk error 428
MAX_RETRY_ATTEMPTS=5
# Keep-alive interval (dalam milidetik)
KEEP_ALIVE_INTERVAL=45000

# ========================================
# WEBHOOK & CAMPAIGN SETTINGS
# ========================================
# Interval scheduler check campaign (dalam menit)
CAMPAIGN_CHECK_INTERVAL=1
# Webhook retry attempts
WEBHOOK_RETRY_ATTEMPTS=3
# Webhook timeout (dalam milidetik)
WEBHOOK_TIMEOUT=10000

# ========================================
# MEMORY & OPTIMIZATION
# ========================================
# Node.js heap size limit (dalam MB)
NODE_OPTIONS=--max-old-space-size=1024
# Garbage collection interval (dalam detik) - otomatis jika NODE_ENV=production
GC_INTERVAL=60

# ========================================
# LOGGING & MONITORING
# ========================================
# Log level: trace, debug, info, warn, error, fatal
LOG_LEVEL=info
# Enable detailed connection logs
DETAILED_LOGS=false
# Health check endpoint enabled
HEALTH_CHECK_ENABLED=true
